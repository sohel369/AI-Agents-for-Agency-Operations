# ============================================
# LOCAL DEVELOPMENT MODE (No AWS Required)
# ============================================
# To run locally without AWS credentials, simply don't set AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY
# The application will automatically use mock mode with sample data.
# You can also explicitly enable mock mode by setting: USE_MOCK_MODE=true

# AWS Configuration (Optional - only needed for production/AWS deployment)
# Leave these empty or unset to run in LOCAL MOCK MODE
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Force mock mode (optional - auto-detected if AWS credentials are missing)
USE_MOCK_MODE=true

# AWS Bedrock Configuration (Optional - only used in production)
BEDROCK_MODEL_ID=anthropic.claude-v2
# Alternative models:
# - anthropic.claude-instant-v1
# - amazon.titan-text-lite-v1
# - meta.llama2-13b-chat-v1

# AI Model Settings
MODEL_TEMPERATURE=0.7
CONFIDENCE_THRESHOLD=0.8

# CRM Configuration
CRM_ENDPOINT_URL=https://api.crm.example.com
CRM_API_KEY=your-crm-api-key

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_API_KEY=your-slack-api-key

# Social Media API Keys (for Marketing Agent)
FACEBOOK_ACCESS_TOKEN=your-facebook-token
LINKEDIN_ACCESS_TOKEN=your-linkedin-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# DynamoDB Table Names (optional - defaults provided in SAM template)
TICKETS_TABLE=SupportTickets
POSTS_TABLE=MarketingPosts
CONFIG_TABLE=SystemConfig

# Frontend API Endpoint (update after deployment)
VITE_API_BASE_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/Prod

# Report Format
REPORT_FORMAT=text
# Options: text, markdown, json

